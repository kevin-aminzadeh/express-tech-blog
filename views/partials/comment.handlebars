<div class="px-2 row mt-3" data-id={{id}}>
  <div class="col-auto">

    <div class="row align-items-center">
      <div class="col-auto rounded py-3 pe-4 bg-light ps-3">
        <h6 class="mb-1 subheading"><small>@{{owner.username}}</small></h6>
        <p class="mb-0">{{content}}</p>

      </div>
      {{#if (when userId "eq" owner.id)}}
        <div class="col">
          <div class="dropdown">
            <button
              class="btn btn-outline-dark border-0 rounded-circle py-2"
              id="commentDropdown"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            ><span><i class="fas fa-ellipsis-h"></i></span></button>
            <ul class="dropdown-menu" aria-labelledby="commentDropdown">
              <li><button class="dropdown-item" href="#">Edit</button></li>
              <li><button class="dropdown-item" href="#">Delete</button></li>

            </ul>
          </div>

        </div>
      {{/if}}
    </div>
    <div class="row justify-content-end">
      <div class="col-auto text-end text-muted">
        <p><small>{{formatDate createdAt}}</small></p>
      </div>
    </div>
  </div>

</div>